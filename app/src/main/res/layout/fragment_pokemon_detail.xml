<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PokemonDetailFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <ImageView
            android:id="@+id/detail_pokemon_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="8dp"
            android:scaleType="centerCrop"
            android:src="@drawable/bulbasaur_sprite"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:src="@drawable/bulbasaur_sprite"
            android:contentDescription="@string/pokemon_image_content_description" />

        <TextView
            android:id="@+id/detail_pokemon_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
            app:layout_constraintTop_toBottomOf="@id/detail_pokemon_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="#001" />

        <TextView
            android:id="@+id/detail_pokemon_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline4"
            app:layout_constraintTop_toBottomOf="@id/detail_pokemon_number"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Bulbasaur" />

        <!-- Tarjeta de Descripción -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/description_card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/detail_pokemon_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <TextView
                    android:id="@+id/pokedex_description_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Descripción de la Pokédex"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/pokedex_description_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@id/pokedex_description_title"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:text="Una extraña semilla fue plantada en su espalda al nacer. La planta brota y crece con este Pokémon." />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Tarjeta de Habilidades -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/abilities_card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/description_card"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <TextView
                    android:id="@+id/abilities_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Habilidades"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <LinearLayout
                    android:id="@+id/abilities_container"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="vertical"
                    app:layout_constraintTop_toBottomOf="@id/abilities_title"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Tarjeta de Estadísticas -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/stats_card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/abilities_card"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <TextView
                    android:id="@+id/stats_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Estadísticas Base"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <!-- HP Stat -->
                <TextView
                    android:id="@+id/stat_hp_label"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="HP:"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/stats_title"/>

                <TextView
                    android:id="@+id/stat_hp_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="30dp"
                    android:gravity="end"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/stat_hp_label"
                    app:layout_constraintBottom_toBottomOf="@id/stat_hp_label"
                    tools:text="45" />

                <ProgressBar
                    android:id="@+id/stat_hp_bar"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintStart_toEndOf="@id/stat_hp_label"
                    app:layout_constraintEnd_toStartOf="@id/stat_hp_value"
                    app:layout_constraintTop_toTopOf="@id/stat_hp_label"
                    app:layout_constraintBottom_toBottomOf="@id/stat_hp_label"
                    tools:progress="45" />

                <!-- Attack Stat -->
                <TextView
                    android:id="@+id/stat_attack_label"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Ataque:"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/stat_hp_label"/>

                <TextView
                    android:id="@+id/stat_attack_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="30dp"
                    android:gravity="end"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/stat_attack_label"
                    app:layout_constraintBottom_toBottomOf="@id/stat_attack_label"
                    tools:text="49" />

                <ProgressBar
                    android:id="@+id/stat_attack_bar"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintStart_toEndOf="@id/stat_attack_label"
                    app:layout_constraintEnd_toStartOf="@id/stat_attack_value"
                    app:layout_constraintTop_toTopOf="@id/stat_attack_label"
                    app:layout_constraintBottom_toBottomOf="@id/stat_attack_label"
                    tools:progress="49" />

                <!-- Defense Stat -->
                <TextView
                    android:id="@+id/stat_defense_label"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Defensa:"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/stat_attack_label"/>

                <TextView
                    android:id="@+id/stat_defense_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="30dp"
                    android:gravity="end"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/stat_defense_label"
                    app:layout_constraintBottom_toBottomOf="@id/stat_defense_label"
                    tools:text="49" />

                <ProgressBar
                    android:id="@+id/stat_defense_bar"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintStart_toEndOf="@id/stat_defense_label"
                    app:layout_constraintEnd_toStartOf="@id/stat_defense_value"
                    app:layout_constraintTop_toTopOf="@id/stat_defense_label"
                    app:layout_constraintBottom_toBottomOf="@id/stat_defense_label"
                    tools:progress="49" />

                <!-- Sp. Atk Stat -->
                <TextView
                    android:id="@+id/stat_sp_atk_label"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Ataque Esp.:"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/stat_defense_label"/>

                <TextView
                    android:id="@+id/stat_sp_atk_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="30dp"
                    android:gravity="end"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/stat_sp_atk_label"
                    app:layout_constraintBottom_toBottomOf="@id/stat_sp_atk_label"
                    tools:text="65" />

                <ProgressBar
                    android:id="@+id/stat_sp_atk_bar"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintStart_toEndOf="@id/stat_sp_atk_label"
                    app:layout_constraintEnd_toStartOf="@id/stat_sp_atk_value"
                    app:layout_constraintTop_toTopOf="@id/stat_sp_atk_label"
                    app:layout_constraintBottom_toBottomOf="@id/stat_sp_atk_label"
                    tools:progress="65" />

                <!-- Sp. Def Stat -->
                <TextView
                    android:id="@+id/stat_sp_def_label"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Defensa Esp.:"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/stat_sp_atk_label"/>

                <TextView
                    android:id="@+id/stat_sp_def_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="30dp"
                    android:gravity="end"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/stat_sp_def_label"
                    app:layout_constraintBottom_toBottomOf="@id/stat_sp_def_label"
                    tools:text="65" />

                <ProgressBar
                    android:id="@+id/stat_sp_def_bar"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintStart_toEndOf="@id/stat_sp_def_label"
                    app:layout_constraintEnd_toStartOf="@id/stat_sp_def_value"
                    app:layout_constraintTop_toTopOf="@id/stat_sp_def_label"
                    app:layout_constraintBottom_toBottomOf="@id/stat_sp_def_label"
                    tools:progress="65" />

                <!-- Speed Stat -->
                <TextView
                    android:id="@+id/stat_speed_label"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Velocidad:"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/stat_sp_def_label"/>

                <TextView
                    android:id="@+id/stat_speed_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="30dp"
                    android:gravity="end"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/stat_speed_label"
                    app:layout_constraintBottom_toBottomOf="@id/stat_speed_label"
                    tools:text="45" />

                <ProgressBar
                    android:id="@+id/stat_speed_bar"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintStart_toEndOf="@id/stat_speed_label"
                    app:layout_constraintEnd_toStartOf="@id/stat_speed_value"
                    app:layout_constraintTop_toTopOf="@id/stat_speed_label"
                    app:layout_constraintBottom_toBottomOf="@id/stat_speed_label"
                    tools:progress="45" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>